<%= render 'reviews/link' %>

<%= render 'users/list', user: @user %><br />


  <%= @review.title %>

  <%= @review.prefecture %>

  <%= @review.brand %>

  <%= attachment_image_tag @review, :image, :fill, 300, 250, format: 'jpeg' %>

  <%= @review.body %>

  <%= link_to @user.name, user_path(@user) %>

  <%= @review.created_at.strftime('%Y/%m/%d %H:%M') %>

  <%= render 'reviews/like', review: @review %><br />
  <% if admin_signed_in? %>
   <%= @review.likes.count %>件の乾杯！
  <% end %>


<% if user_signed_in? and @user.id == current_user.id %>
 <%= link_to '編集', edit_review_path(@review) %>
 <%= link_to "削除", review_path(@review), method: :delete, "data-confirm" => "削除してよろしいですか？" %>
<% end %>

<% if admin_signed_in? %>
 <%= link_to "削除", admins_review_path(@review), method: :delete, "data-confirm" => "削除してよろしいですか？" %>
<% end %>