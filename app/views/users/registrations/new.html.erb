<%= render 'reviews/link' %>

<div class="user-new contents">

<h3>アカウント登録</h3>

 <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <% if resource.errors.any? %>
   <div class="alert alert-warning" role="alert">
     <h4><%= resource.errors.count %>件のエラーがあります。</h4>
      <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
   </div>
  <% end %>

    <div class="field">
     <%= f.text_field :name, autofocus: true, placeholder:"名前(15文字以下)" %>
    </div><br>

    <div class="field" style="margin-left: 5px;">
     <%= f.radio_button :sex, '男', checked: "checked" %><p>男</p>
     <%= f.radio_button :sex, '女' %><p>女</p>
     <%= f.radio_button :sex, 'その他' %><p>その他</p>
    </div><br>

    <div class="field" style="margin-left: -5px;">
     <%= f.date_select :birthday, start_year: 1900, end_year: Time.current.year, default: Date.new(1989, 1, 1), use_month_numbers: true, order: [:year, :month, :day], date_separator: '/' %><p style="display: inline-block;">生まれ</p>
    </div><br>

    <div class="field">
     <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
    </div><br>

    <div class="field">
     <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード(6文字以上)" %>
     <span toggle="password-field" class="glyphicon glyphicon-eye-open toggle-password" aria-hidden="true"></span>
    </div><br>

    <div class="field">
     <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワードを再度入力してください" %>
    </div><br>

    <div class="action">
     <%= f.submit "登録" %>
    </div>
 <% end %>

</div>
