<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <% if resource.errors.any? %>
   <div class="alert alert-warning" role="alert">
     <h4><%= resource.errors.count %>件のエラーがあります。</h4>
      <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
   </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "名前"%>(15文字以下)<br />
    <%= f.text_field :name, autofocus: true, placeholder:"名前" %>
  </div>

  <div class="field">
    <%= f.label :sex, "性別" %><br />
    <%= f.radio_button :sex, '男', checked: "checked" %>男
    <%= f.radio_button :sex, '女' %>女
    <%= f.radio_button :sex, 'その他' %>その他
  </div>

  <div class="field">
    <%= f.label :birthday, "生年月日" %><br />
    <%= f.date_select :birthday, start_year: 1900, end_year: Time.current.year, default: Date.new(1989, 1, 1), use_month_numbers: true, order: [:year, :month, :day] %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %>文字以上)
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "password" %>
    <span toggle="password-field" class="glyphicon glyphicon-eye-open toggle-password" aria-hidden="true"></span>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード" %>(確認用)<br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>
