<%= render 'reviews/link' %>

<div class="user-new contents">

  <h3>管理者登録</h3>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <% if resource.errors.any? %>
        <div class="alert alert-warning" role="alert">
        <h4><%= resource.errors.count %>件のerrorがあります。</h4>
        <ul>
        <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
   </div>
  <% end %>

   <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス" %>
   </div><br>

   <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード（6文字以上）"%>
   </div><br>

　　<div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワードを再度入力してください。" %>
   </div><br>

  <div class="action">
   <%= f.submit "登録" %>
  </div>

<% end %>

</div>